                <div class="progress-fill" id="progressFill"></div>
            </div>
        </div>
        <button class="nav-btn next-btn" id="nextBtn">Next</button>
    </div>

    <script>
        // ============================================
        // PAGE NAVIGATION SYSTEM
        // ============================================
        
        let currentPage = 1;
        const totalPages = 6; // We have 6 navigable pages (page 7 is reached via buttons)
        let yesClickCount = 0;

        // Get all page elements
        const pages = document.querySelectorAll('.page');
        const backBtn = document.getElementById('backBtn');
        const nextBtn = document.getElementById('nextBtn');
        const progressFill = document.getElementById('progressFill');

        // Function to show a specific page
        function showPage(pageNum) {
            // Hide all pages
            pages.forEach(page => page.classList.remove('active'));
            
            // Show the requested page
            const pageToShow = document.getElementById(`page${pageNum}`);
            if (pageToShow) {
                pageToShow.classList.add('active');
            }
            
            // Update navigation buttons
            backBtn.disabled = (pageNum === 1);
            nextBtn.disabled = (pageNum === totalPages);
            
            // Update progress bar (percentage based on current page)
            const progress = ((pageNum - 1) / (totalPages - 1)) * 100;
            progressFill.style.width = progress + '%';
            
            currentPage = pageNum;
        }

        // Back button click
        backBtn.addEventListener('click', () => {
            if (currentPage > 1) {
                showPage(currentPage - 1);
            }
        });

        // Next button click
        nextBtn.addEventListener('click', () => {
            if (currentPage < totalPages) {
                showPage(currentPage + 1);
            }
        });

        // ============================================
        // TIMER FUNCTIONALITY (Page 4)
        // ============================================
        
        function updateTimer() {
            // The date you started liking her
            const startDate = new Date('2022-12-25T00:00:00');
            const now = new Date();
            
            // Calculate total difference in milliseconds
            const diff = now - startDate;
            
            // Calculate years
            let years = now.getFullYear() - startDate.getFullYear();
            
            // Calculate months
            let months = now.getMonth() - startDate.getMonth();
            if (months < 0) {
                years--;
                months += 12;
            }
            
            // Calculate days
            const tempDate = new Date(startDate);
            tempDate.setFullYear(startDate.getFullYear() + years);
            tempDate.setMonth(startDate.getMonth() + months);
            const daysDiff = now - tempDate;
            const days = Math.floor(daysDiff / (1000 * 60 * 60 * 24));
            
            // Calculate hours
            const hours = now.getHours();
            
            // Update the display
            document.getElementById('years').textContent = years;
            document.getElementById('months').textContent = months;
            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours;
        }

        // Update timer immediately and then every hour
        updateTimer();
        setInterval(updateTimer, 3600000); // Update every hour

        // ============================================
        // YES/NO BUTTON LOGIC (Page 6)
        // ============================================
        
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const yesCounter = document.getElementById('yesCounter');

        // Yes button - requires 3 clicks
        yesBtn.addEventListener('click', () => {
            yesClickCount++;
            
            if (yesClickCount < 3) {
                // Update counter display
                yesCounter.textContent = `(${yesClickCount + 1}/3)`;
            } else {
                // After 3 clicks, go to "Yes" page
                pages.forEach(page => page.classList.remove('active'));
                document.getElementById('page7yes').classList.add('active');
                
                // Hide navigation bar on final pages
                document.querySelector('.nav-bar').style.display = 'none';
            }
        });

        // No button - only 1 click needed
        noBtn.addEventListener('click', () => {
            pages.forEach(page => page.classList.remove('active'));
            document.getElementById('page7no').classList.add('active');
            
            // Hide navigation bar on final pages
            document.querySelector('.nav-bar').style.display = 'none';
        });

        // ============================================
        // TEXT SUBMISSION (Page 7 - No response)
        // ============================================
        
        const submitBtn = document.getElementById('submitBtn');
        const responseText = document.getElementById('responseText');
        const thankYouMsg = document.getElementById('thankYouMsg');

        submitBtn.addEventListener('click', async () => {
            const message = responseText.value.trim();
            
            if (message) {
                // This is where we'll send the email using EmailJS
                // For now, we'll just show the thank you message
                
                try {
                    // YOU WILL NEED TO:
                    // 1. Sign up at emailjs.com
                    // 2. Create an email service
                    // 3. Create an email template
                    // 4. Replace 'YOUR_SERVICE_ID', 'YOUR_TEMPLATE_ID', 'YOUR_PUBLIC_KEY' below
                    
                    // Uncomment this when you set up EmailJS:
                    /*
                    await emailjs.send(
                        'YOUR_SERVICE_ID',
                        'YOUR_TEMPLATE_ID',
                        {
                            message: message,
                            from_name: 'Her Response'
                        },
                        'YOUR_PUBLIC_KEY'
                    );
                    */
                    
                    // Show thank you message
                    responseText.style.display = 'none';
                    submitBtn.style.display = 'none';
                    thankYouMsg.style.display = 'block';
                    
                } catch (error) {
                    console.error('Error sending message:', error);
                    alert('There was an issue sending your message. Please try again.');
                }
            } else {
                // If no message, just show thank you
                submitBtn.style.display = 'none';
                thankYouMsg.textContent = 'Thank you.';
                thankYouMsg.style.display = 'block';
            }
        });

        // Initialize the page
        showPage(1);
    </script>

    <!-- EmailJS Library - Uncomment this when you're ready to set up email functionality -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script> -->
    
</body>
